@using noochAdminNew.Classes.ModelClasses;
@using noochAdminNew.Classes.ResponseClasses
@{
    ViewBag.Title = "SearchAdmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Data Tables -->
<link href="~/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet">
<link href="~/css/plugins/dataTables/dataTables.responsive.css" rel="stylesheet">
<link href="~/css/plugins/dataTables/dataTables.tableTools.min.css" rel="stylesheet">

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Search Admin</h2>
        <ol class="breadcrumb">
            <li>
                <a href="Dashboard">Dashboard</a>
            </li>
            <li>
                <a>Admin</a>
            </li>
            <li class="active">
                <strong>Search Admin</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="row">

            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>All Nooch Members</h5>
                        <span class="pull-right"><a href="CreateAdmin" class="btn btn-primary btn-sm" style="position:relative;top:-7px;"><i class="fa fa-plus"></i>  Create New Admin</a></span>
                    </div>

                    <div class="ibox-content">

                        <table class="table table-striped table-bordered table-hover" id="AllAdminUsers">
                            <thead>
                                <tr>
                                    <th>Admin Level</th>
                                    <th>Admin Username</th>
                                    <th>Admin Email Address</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                </tr>
                            </thead>

                            <tbody id="TBOdy">

                                @foreach (SearchAdminResultClass M in Model)
                                {
                                    <tr class="gradeX">
                                        <td>@M.AdminLevel</td>
                                        <td>@M.AdminUserName</td>
                                        <td>@M.AdminEmail</td>
                                        <td>@M.AdminFirstName</td>
                                        <td>@M.AdminLastName</td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
        </div>
    </div>

<!-- Data Tables -->
<script src="~/js/plugins/dataTables/jquery.dataTables.js"></script>
<script src="~/js/plugins/dataTables/dataTables.bootstrap.js"></script>
<script src="~/js/plugins/dataTables/dataTables.responsive.js"></script>
<script src="~/js/plugins/dataTables/dataTables.tableTools.min.js"></script>
<script src="~/Scripts/App/Utility.js"></script>
<!--<script src="~/js/plugins/toastr/toastr.min.js"></script>-->
<script>
    window.paceOptions = {
        ajax: {
            trackMethods: ['GET', 'POST', 'PUT', 'DELETE', 'REMOVE']
        }
    };
</script>
<script src="~/js/plugins/pace/pace.min.js"></script>

<style>   
    button.DTTT_button, div.DTTT_button, a.DTTT_button {
        border: 1px solid #e7eaec;
        background: #fff;
        color: #676a6c;
        box-shadow: none;
        padding: 6px 8px;
    }

    button.DTTT_button:hover, div.DTTT_button:hover, a.DTTT_button:hover {
        border: 1px solid #d2d2d2;
        background: #fff;
        color: #676a6c;
        box-shadow: none;
        padding: 6px 8px;
    }

    .dataTables_filter label {
        margin-right: 30px;
    }
</style>
<script type="text/ecmascript">
    $(document).ready(function () {
        $("#admintasks").trigger("click");
        $('#searchAdmins').addClass('active');

        $('#AllAdminUsers').dataTable({
            responsive: true,
            "tableTools": {
                "sSwfPath": "../js/plugins/dataTables/swf/copy_csv_xls_pdf.swf"
            }
        });
    });
</script>