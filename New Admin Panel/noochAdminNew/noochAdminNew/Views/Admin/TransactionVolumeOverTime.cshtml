``@{
    ViewBag.Title = "TransactionVolumeOverTime";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section id="content">
    <div class="container">
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Date Range</h4>
                    </div>
                    <div class="modal-body">
                        <div class="showDate hide">
                            <form id="frmTarget" method="get" data-parsley-validate="" onsubmit="return false;">
                                <div class="row col-md-12"  > 
                                Start Date  <input data-parsley-required="true"   data-parsley-required-message="Date is required!" type="text" id="startDate" class="date" />  End Date <input type="text" id="endDate" data-parsley-required="true" data-parsley-required-message="Date is required!" class="date" />
                                </div>
                                    <button id="btnShow" type="submit" class="btn-info" onclick="Member.GetTransactionVolumeOverTimeData('dateRange');">show</button>
                            </form>
                        </div>
                    </div>
                     
                </div>

            </div>
        </div>
         
        <div class="row">


            <div class="col-md-11">
                <div class="card">
                    <div class="card-header">
                        <h2 id="headerTransactionOverTime">Bar Chart for showing Graph of Volume Of Transaction over time</h2>

                        <ul class="actions">
                            <li class="dropdown action-show">
                                <a href="" data-toggle="dropdown">
                                    <i class="md md-more-vert">More..</i>
                                </a>

                                <div class="dropdown-menu pull-right">
                                    <ul>
                                        <li><a onclick="Member.GetTransactionVolumeOverTimeData('daily');">Daily</a></li>
                                        <li><a onclick="Member.GetTransactionVolumeOverTimeData('weekly');">weekly</a></li>
                                        <li><a onclick="Member.GetTransactionVolumeOverTimeData('monthly');">monthly</a></li>
                                        <li><a onclick="Member.GetTransactionVolumeOverTimeData ('yearly');">yearly</a></li>
                                        <li><a data-toggle="modal" data-target="#myModal" onclick="Member.showDate( );">Date range</a></li>

                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <div class="card-body card-padding-sm">
                        <div id="bar-chart" class="flot-chart"></div>
                        <div class="flc-bar"></div>
                        <input type="radio" name="status" checked="checked" value="0" onclick="Member.GetTransactionVolumeOverTimeData('r');" />Success 
                        <input type="radio" name="status" value="1" onclick="Member.GetTransactionVolumeOverTimeData('r');" />Cancelled/Rejected
                        <input type="radio" name="status" value="2" onclick="Member.GetTransactionVolumeOverTimeData('r');" />Pending

                    </div>
                
                        
                   
                </div>
            </div>




        </div>



    </div>
</section>



