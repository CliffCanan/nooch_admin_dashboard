@{
    ViewBag.Title = "TransactionVolumeOverTime";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="content">
    <div class="container m-t-20">

        <div class="row">

            <div class="col-md-11">
                <div class="card">

                    <div class="card-header">
                        <h2 id="headerTransactionOverTime">Transaction Volume Over Time</h2>

                        <ul class="actions">

                            <li class="dropdown action-show">
                                <a href="" data-toggle="dropdown">
                                    <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
                                    <span class="sr-only">More..</span>
                                </a>

                                <div class="dropdown-menu pull-right">
                                    <ul>
                                        <li><a onclick="Member.GetTransactionVolumeOverTimeData('daily');">Daily</a></li>
                                        <li><a onclick="Member.GetTransactionVolumeOverTimeData('weekly');">Weekly</a></li>
                                        <li><a onclick="Member.GetTransactionVolumeOverTimeData('monthly');">Monthly</a></li>
                                        <li><a onclick="Member.GetTransactionVolumeOverTimeData ('yearly');">Yearly</a></li>
                                        <li><a data-toggle="modal" data-target="#myModal" onclick="Member.showDate( );">Custom Date Range</a></li>
                                    </ul>
                                </div>
                            </li>

                        </ul>
                    </div>

                    <div class="card-body card-padding-sm">
                        <div id="bar-chart" class="flot-chart"></div>
                        <div class="flc-bar"></div>

                        <h4 class="m-t-20">Transaction Type</h4>

                        <div class="radio m-b-15">
                            <label>
                                <input type="radio" name="status" value="0" onclick="Member.GetTransactionVolumeOverTimeData('r');" checked="checked">
                                <i class="input-helper"></i>
                                Completed
                            </label>
                        </div>

                        <div class="radio m-b-15">
                            <label>
                                <input type="radio" name="status" value="2" onclick="Member.GetTransactionVolumeOverTimeData('r');">
                                <i class="input-helper"></i>
                                Pending
                            </label>
                        </div>

                        <div class="radio m-b-15">
                            <label>
                                <input type="radio" name="status" value="1" onclick="Member.GetTransactionVolumeOverTimeData('r');">
                                <i class="input-helper"></i>
                                Cancelled/Rejected
                            </label>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>

    <!-- Custom Date Range Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Date Range</h4>
                </div>

                <div class="modal-body">
                    <div class="showDate hide">
                        <form id="frmTarget" method="get" data-parsley-validate="" onsubmit="return false;">
                            <div class="row col-md-12">
                                Start Date
                                <input data-parsley-required="true" readonly data-parsley-required-message="Date is required!" type="text" id="startDate" class="date" />
                                End Date
                                <input readonly type="text" id="endDate" data-parsley-required="true" data-parsley-required-message="Date is required!" class="date" />
                            </div>
                            <button id="btnShow" type="submit" class="btn-info" onclick="Member.GetTransactionVolumeOverTimeData('dateRange');">show</button>
                        </form>
                    </div>

                </div>

            </div>

        </div>
    </div>

</section>

<!-- Javascript Libraries -->
<script src="~/js/plugins/parsley/js/parsley.min.js"></script>
 
<script src="~/Scripts/jquery.blockUI.min.js"></script>
<script src="~/Scripts/App/flot/jquery.flot.js"></script>
<script src="~/Scripts/jsDatePick.min.1.3.js"></script>
