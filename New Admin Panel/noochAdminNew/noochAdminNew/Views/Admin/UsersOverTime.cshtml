@{
    ViewBag.Title = "UsersOverTime";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="content">
    <div class="container m-t-20">

        <div class="row">

            <div class="col-md-11">
                <div class="card">
                    <div class="card-header">
                        <h2 id="headerUserOverTime">Users Over Time</h2>

                        <ul class="actions">
                            <li class="dropdown action-show">
                                <a href="" data-toggle="dropdown">
                                    <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
                                    <span class="sr-only">More..</span>
                                </a>

                                <div class="dropdown-menu pull-right">
                                    <ul>
                                        <li><a onclick="updateDateType('daily');">Daily</a></li>
                                        <li><a onclick="updateDateType('weekly');">Weekly</a></li>
                                        <li><a onclick="updateDateType('monthly');">Monthly</a></li>
                                        <li><a onclick="updateDateType('yearly');">Yearly</a></li>
                                        <li><a data-toggle="modal" data-target="#customDateModal" onclick="Member.showDate( );">Custom Date Range</a></li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <div class="card-body card-padding-sm">
                        <div id="bar-chart" class="flot-chart"></div>
                        <div class="flc-bar"></div>

                        <form id="userFilter" class="m-t-10 p-l-20">
                            <div class="row">

                                <div class="col-sm-4 col-md-3 col-lg-2">
                                    <h4>User Type</h4>

                                    <div class="radio m-b-15">
                                        <label>
                                            <input type="radio" name="userType" value="0" checked="checked">
                                            <i class="input-helper"></i>
                                            All
                                        </label>
                                    </div>

                                    <div class="radio m-b-15">
                                        <label>
                                            <input type="radio" name="userType" value="1">
                                            <i class="input-helper"></i>
                                            Registered
                                        </label>
                                    </div>

                                    <div class="radio m-b-15">
                                        <label>
                                            <input type="radio" name="userType" value="2">
                                            <i class="input-helper"></i>
                                            Non-Registered
                                        </label>
                                    </div>
                                </div>

                                <div class="col-sm-4 col-md-3 col-lg-2">
                                    <h4>Status</h4>

                                    <div class="radio m-b-15">
                                        <label>
                                            <input type="radio" name="userStatus" value="0" checked="checked">
                                            <i class="input-helper"></i>
                                            All
                                        </label>
                                    </div>

                                    <div class="radio m-b-15">
                                        <label>
                                            <input type="radio" name="userStatus" value="1">
                                            <i class="input-helper"></i>
                                            Active
                                        </label>
                                    </div>

                                    <div class="radio m-b-15">
                                        <label>
                                            <input type="radio" name="userStatus" value="2">
                                            <i class="input-helper"></i>
                                            Deleted
                                        </label>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-xs-10 col-md-6 col-lg-4">
                                    <button type="submit" class="btn btn-primary center-block">Apply</button>
                                </div>
                            </div>
                        </form>


                    </div>

                </div>
            </div>

        </div>
    </div>

    <!-- Custom Date Range Modal -->
    <div class="modal fade" id="customDateModal" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Date Range</h4>
                </div>

                <div class="modal-body">
                    <div class="showDate hide">
                        <form id="frmTarget" method="get" data-parsley-validate="" onsubmit="return false;">
                            Start Date
                            <input readonly data-parsley-required="true" data-parsley-required-message="Date is required!" type="text" id="startDate" class="date" />
                            End Date
                            <input type="text" readonly id="endDate" data-parsley-required="true" data-parsley-required-message="Date is required!" class="date" />
                            <button id="btnShow" type="submit" class="btn-info" onclick="Member.getUserOverTime('dateRange');">show</button>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>

</section>


<!-- Javascript Libraries -->
<script src="~/Scripts/jsDatePick.min.1.3.js"></script>
<script src="~/Scripts/App/flot/jquery.flot.js"></script>
<script src="~/Scripts/App/UserOverTime.js"></script>
