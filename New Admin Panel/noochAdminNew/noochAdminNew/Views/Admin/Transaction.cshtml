<script type="text/javascript">
    $(document).ready(function (e)
    {
        $(".btnCancel").click(function ()
        {
            var data_val=$(this).attr('data-val');

            swal({
                title: "Are you sure ?",
                text: "Are you sure you want to cancel transaction ?",
                type: "warning", showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes !",
                closeOnConfirm: false
            },

            function ()
            {
                swal("Done!", "Transaction cancelled successfully ", "success");
                var url = "../Admin/CancelTransaction";
                var data = {};
                data.transactionId = data_val;

                $.post(url, data, function (result)
                {
                    if (result.IsSuccess == true)
                    {
                        toastr.success(result.Message, 'Transaction cancelled successfully ')

                        $("#" + data_val).text("Cancelled");
                    }
                    else
                    {
                        tostr.error(result.Message, 'Error');
                    }
                });
            }
            );
        });
    });
</script>





<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Nooch Transactions</h2>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">

        <div class="col-lg-12" id="memListAllTableDiv">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>All Nooch Members</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>

                    </div>
                </div>

                <div class="ibox-content">

                    <div class="row">
                    </div>
                    <table class="table table-striped table-bordered table-hover" id="AllMembers">
                        <thead>
                            <tr>

                                <th>Transaction ID</th>
                                <th>Transaction Type</th>
                                <th>Status</th>
                                <th>Date / Time</th>
                                <th>Sender's Name</th>
                                <th>Recipient's Name</th>
                                <th>Amount</th>
                                <th>Memo</th>
                                <th>Location</th>
                                
                            </tr>
                        </thead>

                        <tbody id="TBOdy">


                            @foreach (TransactionClass ad in Model)
                            {

                                <tr class="gradeX">


                                    <td>@ad.TransactionId</td>
                                    <td>@ad.TransactionType</td>
                                    <td id="@ad.TransactionId">
                                     @ad.TransactionStatus <br />

                                     @if (ad.TransactionStatus == "Pending")
                                     {
                                      <button type="button" data-val="@ad.TransactionId" class="btn btn-danger btn-xs btnCancel" onclick="statusCancel(@ad.TransactionId)">Cancel</button>
                                     }
                                    </td>
                                    <td>@ad.TransactionDate1 <small>@ad.TransactionTime</small></td>
                                    <td><a href="@Url.Action("Detail", "Member", new { NoochId=@ad.SenderNoochId} )">@ad.SenderName</a></td>

                                    <td><a href="@Url.Action("Detail", "Member", new { NoochId=@ad.RecepientNoochId} )">@ad.RecipienName</a></td>
                                    <td><b>$ @ad.Amount</b></td>
                                    <td>@ad.Memo</td>
                                    <td><button type="button" id="btnLocation" class="btn btn-link btn-xs " onclick="showLocationModal('@ad.TransLati','@ad.TransLongi','@ad.state')">@ad.city @ad.state</button></td>
                                    
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

    </div>

  
</div>





